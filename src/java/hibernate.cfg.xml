<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/laboratorio_clinico_roosevelt?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">admin</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.query.factory_class">org.hibernate.hql.classic.ClassicQueryTranslatorFactory</property>
    <mapping resource="entities/Bacteriologia.hbm.xml"/>
    <mapping resource="entities/Pacientes.hbm.xml"/>
    <mapping resource="entities/Hematologia.hbm.xml"/>
    <mapping resource="entities/Doctores.hbm.xml"/>
    <mapping resource="entities/Orina.hbm.xml"/>
    <mapping resource="entities/OrinaFisicoQuimico.hbm.xml"/>
    <mapping resource="entities/OrinaMicroscopico.hbm.xml"/>
    <mapping resource="entities/HematologiaExamena.hbm.xml"/>
    <mapping resource="entities/Inmunologia.hbm.xml"/>
    <mapping resource="entities/Quimica.hbm.xml"/>
    <mapping resource="entities/HematologiaExamenb.hbm.xml"/>
    <mapping resource="entities/Heces.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
